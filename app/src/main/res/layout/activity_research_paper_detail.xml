<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ResearchPaperDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/header_lay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/m50">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_back"
                android:layout_width="@dimen/m34"
                android:layout_height="@dimen/m34"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/m15"
                android:elevation="@dimen/m10"
                app:cardCornerRadius="@dimen/m17">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="@dimen/m20"
                        android:layout_height="@dimen/m20"
                        android:layout_centerInParent="true"
                        android:background="@drawable/ic_arrow_back"
                        android:backgroundTint="@color/primary_text_color"
                        android:contentDescription="@string/app_name" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <com.rajasahabacademy.views.BoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/m20"
                android:text="@string/research_paper"
                android:layout_toEndOf="@+id/cv_back"
                android:textColor="@color/primary_text_color"
                android:textSize="@dimen/text_18" />

            <com.rajasahabacademy.views.BoldTextView
                android:id="@+id/tv_add_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/m20"
                android:text="Add Cart"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/m15"
                android:textColor="@color/primary_text_color"
                android:textSize="@dimen/text_18" />


        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/iv_research_paper_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/m5"
            android:layout_marginBottom="-10dp"
            android:elevation="@dimen/m10"
            app:cardCornerRadius="@dimen/m10"
            app:cardPreventCornerOverlap="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m250">

                    <ImageView
                        android:id="@+id/iv_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitXY"
                        android:transitionName="@string/course_image_transition" />


                </RelativeLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <com.rajasahabacademy.views.RegularTextView
            android:id="@+id/tv_research_paper_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/m10"
            android:layout_marginTop="@dimen/m10"
            android:layout_marginEnd="@dimen/m10"
            android:maxLines="2"
            android:text="@string/app_name"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/text_16" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/m50"
            android:layout_marginTop="@dimen/m50"
            android:layout_marginEnd="@dimen/m50"
            android:background="@color/colorPrimary"
            android:paddingTop="@dimen/m10"
            android:paddingBottom="@dimen/m10">

            <ImageView
                android:id="@+id/iv_pdf_image"
                android:layout_width="@dimen/m40"
                android:layout_height="@dimen/m40"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/m50"
                android:background="@drawable/ic_pdf"
                android:backgroundTint="@color/white"
                android:contentDescription="@string/app_name" />

            <ImageView
                android:id="@+id/iv_pdf_lock"
                android:layout_width="@dimen/m30"
                android:layout_height="@dimen/m30"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/m50"
                android:background="@drawable/ic_lock"
                android:backgroundTint="@color/white"
                android:contentDescription="@string/app_name" />


        </RelativeLayout>

    </LinearLayout>


    <com.rajasahabacademy.views.BoldTextView
        android:id="@+id/tv_buy_now"
        android:layout_width="match_parent"
        android:layout_height="@dimen/m50"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/m50"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="@string/buy_now"
        android:textColor="@color/white"
        android:textSize="@dimen/text_18" />


</RelativeLayout>