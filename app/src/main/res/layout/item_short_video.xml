<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:visibility="visible">

        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/exoPlayerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            app:resize_mode="fit"
            app:show_buffering="when_playing"
            app:use_controller="false" />


    </FrameLayout>

    <com.rajasahabacademy.views.BoldTextView
        android:id="@+id/tv_short_video_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/m30"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/text_14" />

    <ImageView
        android:id="@+id/iv_short_video_like"
        android:layout_width="@dimen/m30"
        android:layout_height="@dimen/m30"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/m30"
        android:background="@drawable/ic_like_empty"
        android:contentDescription="@string/app_name" />


</RelativeLayout>